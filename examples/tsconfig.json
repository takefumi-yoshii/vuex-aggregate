{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts"
  ]
}
